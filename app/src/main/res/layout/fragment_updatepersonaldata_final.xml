<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    android:background="@drawable/background_act_datos_confirmar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="83"
        android:gravity="center"
        android:paddingLeft="40sp"
        android:paddingRight="40sp"
        android:weightSum="100"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="75"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="62dp"
                android:layout_gravity="right"
                android:src="@drawable/icon_like" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:gravity="center"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/guardado_con_exito"
                android:textSize="20sp"
                android:fontFamily="@font/roboto_light"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/hemos_almacenado_con"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_light"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="17"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="60sp"
            android:paddingRight="60sp"
            android:paddingTop="50sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/gracias_por_tu"
                android:fontFamily="@font/roboto_light"
                android:textColor="#4A4A49"
                android:textSize="17sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="45dp"/>
            <Button
                android:id="@+id/btnContinuar_actDatos_guardar"
                android:layout_width="173dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:background="@drawable/btn_green"
                android:text="Continuar"
                android:textSize="16sp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000" />
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/continua_usando_nuestra"
                android:fontFamily="@font/roboto_light"
                android:textColor="#4A4A49"
                android:textSize="16sp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>

