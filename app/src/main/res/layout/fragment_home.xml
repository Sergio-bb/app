<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:weightSum="100">

                <LinearLayout
                    android:id="@+id/layout_hola_usuario"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="94"
                    android:animateLayoutChanges="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/lblHolaUsuario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_light"
                        android:paddingRight="8dp"
                        android:text="@string/encuentra_servicios"
                        android:textColor="#4A4A49"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/relative_alerta_tarea"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="40"
                    android:background="@drawable/bg_alert_tarea_pendiente"
                    android:visibility="gone"
                    android:weightSum="100">

                    <ImageView
                        android:id="@+id/button_alert"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="20"
                        android:background="@drawable/bg_icon_alerta_tarea_pendiente"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_exclamacion_alerta" />

                    <TextView
                        android:id="@+id/textViewTienesPendiente"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="68"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:text="Tienes una tarea pendiente"
                        android:textSize="12sp"
                        android:textStyle="normal" />

                    <ImageView
                        android:id="@+id/flecha_alerta"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="12"
                        android:paddingTop="14dp"
                        android:paddingBottom="14dp"
                        android:src="@drawable/ic_alerta_tarea_pendientes_flecha" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:paddingTop="12dp"
                android:paddingRight="12dp">

                <LinearLayout
                    android:id="@+id/imgb_finanzas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/home_misfinanzas"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="75"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="92dp"
                            android:paddingVertical="25dp"
                            android:paddingLeft="30dp"
                            android:paddingRight="10dp"
                            android:src="@drawable/icon_finanzas" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="25"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingHorizontal="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_light"
                            android:text="@string/menu_finanzass"
                            android:textColor="#4A4A49"
                            android:textSize="19sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_light"
                            android:text="Administra aquí tu dinero"
                            android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/imgb_centrosvacacionales"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/home_centros_vacacionales"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:weightSum="100">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="75"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="92dp"
                            android:paddingVertical="25dp"
                            android:paddingLeft="30dp"
                            android:paddingRight="10dp"
                            android:src="@drawable/icon_centrosvacacionales" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="25"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingHorizontal="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_light"
                            android:text="@string/menu_centros_vacacionales"
                            android:textColor="#4A4A49"
                            android:textSize="19sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_light"
                            android:text="Programa tus próximas vacaciones"
                            android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/imgb_alianzas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/home_convenios"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:weightSum="100">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="25"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:paddingVertical="25dp"
                            android:paddingLeft="30dp"
                            android:paddingRight="10dp"
                            android:src="@drawable/icon_convenios" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="75"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingHorizontal="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_light"
                            android:text="@string/menu_convenios"
                            android:textColor="#4A4A49"
                            android:textSize="19sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_light"
                            android:text="Todos los beneficios son para ti"
                            android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_light"
                        android:paddingLeft="11dp"
                        android:paddingTop="18dp"
                        android:text="@string/opciones_que_te"
                        android:textColor="#4A4A49"
                        android:textSize="15sp" />

                </LinearLayout>

                <GridLayout
                    android:id="@+id/circular_progress_bar_options"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:alignmentMode="alignBounds"
                    android:background="@drawable/home_options"
                    android:columnCount="4"
                    android:orientation="horizontal"
                    android:paddingHorizontal="15dp"
                    android:paddingBottom="11dp"
                    android:rowCount="1"
                    android:useDefaultMargins="false"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="0dp">

                        <ProgressBar
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:indeterminateTint="#707070"
                            android:visibility="visible" />
                    </LinearLayout>
                </GridLayout>

                <GridLayout
                    android:id="@+id/contentOptions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:alignmentMode="alignBounds"
                    android:background="@drawable/home_options"
                    android:columnCount="4"
                    android:orientation="horizontal"
                    android:paddingHorizontal="15dp"
                    android:paddingBottom="11dp"
                    android:rowCount="1"
                    android:useDefaultMargins="false"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/buttonTransferencias"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="0dp"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:padding="3dp"
                            android:src="@drawable/icon_enviardinero" />

                        <TextView
                            android:id="@+id/tv_enviardinero"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:gravity="center_horizontal"
                            android:text="Transferencias"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/buttonAbrirAhorro"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="0dp"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:padding="2dp"
                            android:src="@drawable/icon_abrirahorrohdpi" />

                        <TextView
                            android:id="@+id/tv_Abrirahorro"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:gravity="center_horizontal"
                            android:text="Abre un ahorro"
                            android:textSize="10sp"
                            android:visibility="visible" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/buttonMisMensajes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="0dp"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/row_cant_messages"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:padding="2dp"
                            android:src="@drawable/icon_mensajes" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:gravity="center_horizontal"
                            android:text="Mis mensajes"
                            android:textSize="10dp"
                            android:visibility="visible" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/buttonPagosQR"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="0dp"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="2dp"
                            android:src="@drawable/icon_qr" />

                        <TextView
                            android:id="@+id/tv_PagosQR"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:gravity="center_horizontal"
                            android:text="Pagos QR"
                            android:textSize="10sp"
                            android:visibility="visible" />
                    </LinearLayout>
                </GridLayout>

                <LinearLayout
                    android:id="@+id/titleBannerComercial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="bottom"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_light"
                        android:text="@string/te_interesa"
                        android:textColor="#4A4A49"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="30dp"
                    android:orientation="vertical">

                    <ProgressBar
                        android:id="@+id/circular_progress_bar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:indeterminateTint="#707070"
                        android:paddingVertical="15dp"
                        android:scaleType="centerInside"
                        android:visibility="gone" />

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/viewPagerHome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="40dp"
                        android:paddingEnd="40dp"
                        android:visibility="gone" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

