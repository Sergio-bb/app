<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff">

    <TextView
        android:id="@+id/lblHolaUsuario"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/gris"
        android:gravity="center"
        android:padding="6dp"
        android:text="Adelanto de nómina"
        android:textSize="17sp"
        android:fontFamily="@font/roboto_light"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:weightSum="100"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="8"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="84"
                android:paddingBottom="35dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblvalor_adelantar"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:text="Resumen movimiento:"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto_light"/>

                <TextView
                    android:id="@+id/lblValor_Solicitado"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:fontFamily="@font/roboto_light"/>

                <TextView
                    android:id="@+id/lblValor_Comision"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:fontFamily="@font/roboto_light"/>

                <TextView
                    android:layout_marginTop="25dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="Ten en cuenta: "
                    android:fontFamily="@font/roboto_light"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="• El valor solicitado será abonado a tu bolsillo de Nómina."
                    android:textSize="13sp"
                    android:fontFamily="@font/roboto_light"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="• El monto total será debitado de forma automática en tu próxima quincena."
                    android:textSize="13sp"
                    android:fontFamily="@font/roboto_light"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="• En tu estado de cuenta este movimiento se visualizará como un crédito a tasa 0%."
                    android:textSize="13sp"
                    android:fontFamily="@font/roboto_light"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="• No se verá afectada tu capacidad de pago."
                    android:textSize="13sp"
                    android:fontFamily="@font/roboto_light"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="• Cupo sujeto a cambios de acuerdo con las condiciones del producto."
                    android:textSize="13sp"
                    android:fontFamily="@font/roboto_light"/>

                <TextView
                    android:id="@+id/terminos_adelantonomina"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|start"
                    android:gravity="fill_horizontal|start"
                    android:layout_marginTop="20dp"
                    android:singleLine = "false"
                    android:justificationMode="inter_word"
                    android:text="@string/terminos_adelantonomina"
                    android:textSize="13sp"
                    android:fontFamily="@font/roboto_light"/>

                <CheckBox
                    android:id="@+id/chk_acepto_terminosadelanto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Acepto"
                    android:textSize="17sp"
                    android:fontFamily="@font/roboto_light"/>

                <Button
                    android:id="@+id/btnAdelantarN"
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Adelantar Nómina"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:background="@drawable/backgroun_border_radius_gris"
                    android:fontFamily="@font/roboto_light"
                    android:enabled="false"/>

            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="8"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>