<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/FragmentAhorros"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff">

    <TextView
        android:id="@+id/lblNombreProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gris"
        android:gravity="center"
        android:padding="6dp"
        android:text="Apertura de ahorros"
        android:textSize="16sp"
        android:fontFamily="@font/roboto_light"/>

    <LinearLayout
        android:id="@+id/layout_circular_progress_bar"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">
        <ProgressBar
            android:id="@+id/circular_progress_bar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:indeterminateTint="#707070"
            android:visibility="visible"/>
        <ImageView
            android:id="@+id/imageReferesh"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/icon_refresh"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/text_circular_progress_Bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="Intentar de nuevo"
            android:textSize="12sp"
            android:fontFamily="@font/roboto_light"
            android:visibility="visible"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/contentSolicitudAhorros"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:weightSum="100"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="8"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="84"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Línea de ahorro"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto_light"/>

                <Spinner
                    android:id="@+id/spinnerTipoProd"
                    android:background="@drawable/background_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="38dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Valor cuota mensual"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/roboto_light"/>

                <EditText
                    android:id="@+id/txtValorCuota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ingresa el valor de la cuota"
                    android:textColorHint="#666"
                    android:padding="10dp"
                    android:textSize="16sp"
                    android:textColor="#666"
                    android:inputType="number|numberDecimal"
                    android:maxLength="13"
                    android:background="@drawable/backgroun_border_radius"
                    android:fontFamily="@font/roboto_light"/>

                <TextView
                    android:id="@+id/lblPlazo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Plazo"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_light"/>

                <Spinner
                    android:id="@+id/spinnerPlazo"
                    android:background="@drawable/background_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"/>

                <TextView
                    android:id="@+id/lblFecha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fecha de entrega"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/roboto_light"/>

                <TextView
                    android:id="@+id/txtFecha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:hint="Selecciona la fecha"
                    android:textColorHint="#666"
                    android:padding="10dp"
                    android:textSize="16sp"
                    android:background="@drawable/backgroun_border_radius"
                    android:fontFamily="@font/roboto_light"/>

                <TextView
                    android:id="@+id/lblDescripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripción"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/roboto_light"/>

                <Spinner
                    android:id="@+id/spinnerDescripcion"
                    android:background="@drawable/background_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"/>

                <Button
                    android:id="@+id/btnEnviarSolicitud"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Enviar solicitud"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@drawable/btn_yellow_internal"
                    android:fontFamily="@font/roboto_light"/>

            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="8"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>