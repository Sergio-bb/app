<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/backgroun_border_radius"
            android:padding="15dp">

            <ImageView
                android:id="@+id/saldoInsuficiente"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_notify_fondos_insuficientes"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/textViewValoraTransferirTextTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Hemos encontrado un problema"
                android:textAlignment="center"
                android:textSize="22sp"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_light"/>

            <TextView
                android:id="@+id/textViewSalioMalDescrip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:paddingHorizontal="20dp"
                android:text="Revisa el saldo de tu cuenta ya que no dispones del dinero suficiente para esta transaciÃ³n"
                android:textAlignment="center"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_light"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp">
                <Button
                    android:id="@+id/btncerrarSaldoInsuficiente"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:paddingHorizontal="40dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Cerrar"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@drawable/backgroun_border_radius_gris"
                    android:fontFamily="@font/roboto_light"/>
            </LinearLayout>



        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>