<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:background="@drawable/backgroun_border_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="25dp"
                android:paddingRight="10dp"
                android:src="@drawable/check_green" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hemos recibido tu solicitud con Ã©xito"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_light"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/separadora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/linea_separadora"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/mensaje_popup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textSize="17sp"
            android:fontFamily="@font/roboto_light"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnAceptar"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/backgroun_border_radius_yellow"
        android:text="Aceptar"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_light"/>

</RelativeLayout>
