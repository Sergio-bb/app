<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gris"
        android:gravity="center"
        android:padding="6dp"
        android:text="Transferencias"
        android:textSize="17sp"
        android:fontFamily="@font/roboto_light"/>

    <TextView
        android:id="@+id/lblResume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="15dp"
        android:paddingVertical="5dp"
        android:background="#f2f2f2"
        android:text="SecciÃ³n exclusiva para realizar transferencias entre asociados"
        android:gravity="left"
        android:textSize="16sp"
        android:fontFamily="@font/roboto_light"/>

    <LinearLayout
        android:id="@+id/layoutInscribirCuenta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:text="Inscribir cuenta"
            android:textSize="17sp"
            android:fontFamily="@font/roboto_light"/>

        <ImageView
            android:layout_weight="5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_arrow_right"
            android:layout_marginTop="15dp"
            android:contentDescription="@string/app_name"/>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.2dp"
        android:id="@+id/separator_item"
        android:visibility="visible"
        android:background="#cccccc"/>

    <LinearLayout
        android:id="@+id/layoutEliminarCuenta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:text="Eliminar cuenta"
            android:textSize="17sp"
            android:fontFamily="@font/roboto_light"/>

        <ImageView
            android:layout_weight="5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_arrow_right"
            android:layout_marginTop="15dp"
            android:contentDescription="@string/app_name"/>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.2dp"
        android:id="@+id/separator_item2"
        android:visibility="visible"
        android:background="#cccccc"/>

    <LinearLayout
        android:id="@+id/layoutRealizarTransferencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:text="Realizar transferencia"
            android:textSize="17sp"
            android:fontFamily="@font/roboto_light"/>

        <ImageView
            android:layout_weight="5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_arrow_right"
            android:layout_marginTop="15dp"
            android:contentDescription="@string/app_name"/>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.2dp"
        android:id="@+id/separator_item3"
        android:visibility="visible"
        android:background="#cccccc"/>

</LinearLayout>