<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/header_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F5E61F"
        android:paddingRight="12dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:gravity="start"
            android:src="@drawable/logo_login" />
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#fff"
            android:contentDescription="@string/app_name"
            android:padding="10dp"
            android:src="@drawable/btn_back"
            android:visibility="gone"/>

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarSideBar"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="right"
            app:navigationIcon="@drawable/icon_menu" />
    </RelativeLayout>

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:openDrawer="end">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:weightSum="100"
            android:orientation="vertical">

            <LinearLayout
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="90">

                <fragment
                    android:id="@+id/content_frame"
                    android:name="androidx.navigation.fragment.NavHostFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:defaultNavHost="true"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/footer"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:weightSum="100"
                android:layout_alignParentBottom="true"
                android:background="@color/yellow"
                android:baselineAligned="false"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:elevation="10dp">

                <View
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="4"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="23"
                    android:weightSum="100"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/btnPortafolio"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="70"
                        android:gravity="top|center|center_horizontal"
                        android:background="@android:color/transparent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_portafolio" />

                    <TextView
                        android:id="@+id/tv_productos"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="30"
                        android:gravity="top|center|center_horizontal"
                        android:layout_below="@+id/btnPortafolio"
                        android:background="@android:color/transparent"
                        android:text="Productos"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="23"
                    android:weightSum="100"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/btnDirectorio"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="70"
                        android:layout_toRightOf="@+id/btnPreguntasFrecuentes"
                        android:background="@android:color/transparent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_directorio"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tv_directorio"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="30"
                        android:gravity="top|center|center_horizontal"
                        android:layout_below="@+id/btnDirectorio"
                        android:layout_toRightOf="@+id/tv_ayuda"
                        android:background="@android:color/transparent"
                        android:text="Directorio"
                        android:textSize="12sp"
                        android:visibility="visible" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="23"
                    android:weightSum="100"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/btnEncuentranos"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="70"
                        android:layout_toRightOf="@+id/btnDirectorio"
                        android:background="@android:color/transparent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_encuentranos"
                        android:visibility="visible" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="30"
                        android:gravity="top|center|center_horizontal"
                        android:layout_below="@+id/btnEncuentranos"
                        android:layout_toRightOf="@+id/tv_directorio"
                        android:background="@android:color/transparent"
                        android:text="Encuéntranos"
                        android:textSize="12sp"
                        android:visibility="visible" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="23"
                    android:weightSum="100"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/btnPreguntasFrecuentes"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="70"
                        android:layout_toRightOf="@+id/btnPortafolio"
                        android:background="@android:color/transparent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_mas"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tv_ayuda"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="30"
                        android:gravity="top|center|center_horizontal"
                        android:layout_below="@+id/btnPreguntasFrecuentes"
                        android:layout_toRightOf="@+id/tv_productos"
                        android:background="@android:color/transparent"
                        android:text="Más"
                        android:textSize="12sp"
                        android:visibility="visible" />

                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="4"/>

            </LinearLayout>
        </LinearLayout>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:fitsSystemWindows="true"
            android:background="#ffffff">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:scrollbars="none">

                <LinearLayout
                    android:backgroundTint="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginVertical="16dp"
                    android:paddingHorizontal="25dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:orientation="vertical"
                        android:paddingHorizontal="4dp"
                        android:paddingBottom="14dp">
                        <TextView
                            android:id="@+id/nombreUsuario"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="4dp"
                            android:text="Usuario"
                            android:textSize="19sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/roboto_light" />
                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:text="¿Cómo podemos ayudarte?"
                            android:fontFamily="@font/roboto_light"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:orientation="vertical"
                        android:layout_marginVertical="16dp">

                        <LinearLayout
                            android:id="@+id/buttonInformacionPersonal"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:weightSum="100"
                            android:paddingVertical="8dp"
                            android:layout_marginVertical="4dp"
                            android:orientation="horizontal"
                            android:background="@drawable/backgroun_border_radius">
                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="20"
                                android:src="@drawable/icon_inf_personal"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="80"
                                android:layout_gravity="center_vertical"
                                android:text="@string/informacion_personal_menu"
                                android:fontFamily="@font/roboto_light"
                                android:textSize="16sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/buttonCentroDeAyuda"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:weightSum="100"
                            android:paddingVertical="8dp"
                            android:layout_marginVertical="4dp"
                            android:orientation="horizontal"
                            android:background="@drawable/backgroun_border_radius">
                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="20"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/icon_centro_ayuda"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="80"
                                android:layout_gravity="center_vertical"
                                android:text="@string/centro_ayuda"
                                android:fontFamily="@font/roboto_light"
                                android:textSize="16sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/buttonConoceTuGestor"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:weightSum="100"
                            android:paddingVertical="8dp"
                            android:layout_marginVertical="4dp"
                            android:orientation="horizontal"
                            android:background="@drawable/backgroun_border_radius">
                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="20"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/icon_gestor"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="80"
                                android:layout_gravity="center_vertical"
                                android:text="@string/conoce_gestor"
                                android:fontFamily="@font/roboto_light"
                                android:textSize="16sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_buton_vincula"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:clipToPadding="false">

                            <LinearLayout
                                android:id="@+id/buttonVinculaCuentaNequi"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:weightSum="100"
                                android:paddingVertical="8dp"
                                android:layout_marginVertical="4dp"
                                android:orientation="horizontal"
                                android:background="@drawable/backgroun_border_radius"
                                android:visibility="gone">
                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="20"
                                    android:layout_gravity="center_vertical"
                                    android:scaleType="centerInside"
                                    android:padding="2dp"
                                    android:src="@drawable/icon_nequi"/>
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="80"
                                    android:layout_gravity="center_vertical"
                                    android:text="@string/Vincular_cuenta"
                                    android:fontFamily="@font/roboto_light"
                                    android:textSize="16sp"/>
                            </LinearLayout>
                            <RelativeLayout
                                android:id="@+id/warning_icon"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="top|right"
                                android:layout_marginLeft="-21dip"
                                android:background="@drawable/bg_icon_exclamacion_nequi"
                                android:visibility="gone">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="5dp"
                                    android:src="@drawable/ic_exclamacion_alerta"/>
                            </RelativeLayout>

                        </LinearLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="16dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btnCerrarSession"
                                android:layout_width="150dp"
                                android:layout_height="35dp"
                                android:background="@drawable/backgroun_button_rounded"
                                android:backgroundTint="@color/yellow"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textStyle="bold"
                                android:fontFamily="@font/roboto_light"
                                android:textSize="16sp"
                                android:text="Cerrar Sesión"
                                android:layout_gravity="center"/>

                            <LinearLayout
                                android:id="@+id/sectionFechaIngreso"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingTop="10dp"
                                android:paddingBottom="16dp"
                                android:gravity="center">

                                <TextView
                                    android:text="@string/ultima_fecha_ingreso"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textSize="13sp"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/roboto_light"/>

                                <TextView
                                    android:id="@+id/tvFechaIngreso"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textSize="13sp"
                                    android:visibility="visible"
                                    android:fontFamily="@font/roboto_light"/>

                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </ScrollView>
        </com.google.android.material.navigation.NavigationView>

    </androidx.drawerlayout.widget.DrawerLayout>
</LinearLayout>
