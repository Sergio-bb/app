<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:background="@drawable/backgroun_border_radius">

    <LinearLayout
        android:id="@+id/layout_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/lblMessagePopUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="¿Estás seguro de solicitar la reposición de tu Tarjeta PRESENTE?"
            android:textStyle="bold"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_light"/>

        <TextView
            android:id="@+id/lblMessagePopUp2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Por seguridad el plástico actual quedará cancelado 24 horas después de realizar esta solicitud. La nueva tarjeta será enviada en 12 días hábiles a la dependencia en la que estás inscrito o nos indicaste."
            android:textSize="14sp"
            android:fontFamily="@font/roboto_light"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true">

            <Button
                android:id="@+id/btnCancelar"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/backgroun_border_radius_grisoscuro"
                android:text="Cancelar"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_light"/>

            <Button
                android:id="@+id/btnAceptar"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/backgroun_border_radius_yellow"
                android:text="Aceptar"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_light"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
