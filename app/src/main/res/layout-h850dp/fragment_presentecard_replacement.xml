<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <TextView
        android:id="@+id/lblReposicion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:background="@color/gris"
        android:text="Reposición Tarjeta PRESENTE"
        android:gravity="center"
        android:textSize="16sp"
        android:fontFamily="@font/roboto_light"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:weightSum="100"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="8"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="84"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="20dp"
                    android:gravity="center"
                    android:text="Para comenzar con el proceso de reposición, completa los siguientes campos"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_light"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Correo electrónico"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/roboto_light"/>

                <EditText
                    android:id="@+id/rt_correo_electronico"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/backgroun_border_radius"
                    android:padding="10dp"
                    android:gravity="center"
                    android:inputType="textEmailAddress"
                    android:hint="Ingresa tu correo"
                    android:fontFamily="@font/roboto_light"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Número de contacto"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/roboto_light"/>

                <EditText
                    android:id="@+id/rt_numero_contacto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/backgroun_border_radius"
                    android:padding="10dp"
                    android:gravity="center"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:hint="Ingresa tu número de contacto"
                    android:fontFamily="@font/roboto_light"/>

                <Button
                    android:id="@+id/btnContinuar"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginVertical="25dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Continuar"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@drawable/backgroun_button_rounded"
                    android:backgroundTint="@color/yellow"
                    android:fontFamily="@font/roboto_light"/>
            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="8"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>