<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/header_app"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#F5E61F"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:gravity="start"
            android:src="@drawable/logo_internal" />

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#fff"
            android:contentDescription="@string/app_name"
            android:padding="10dp"
            android:src="@drawable/btn_back" />

        <TextView
            android:id="@+id/btnSalir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:paddingEnd="15dp"
            android:paddingRight="15dp"
            android:paddingTop="19dp"
            android:text="@string/salir"
            android:textColor="#333"
            android:textSize="19sp"
            android:fontFamily="@font/roboto_light"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/lblHolaUsuario"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:background="@color/gris"
        android:text="Candidatos"
        android:gravity="center"
        android:textSize="17sp"
        android:fontFamily="@font/roboto_light"/>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="20dp" >

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="Votante: "
                android:gravity="left"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/lbl_votante"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="123456789"
                android:gravity="left"
                android:textSize="14sp"/>
        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="Candidato: "
                android:gravity="left"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/lbl_candidato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="Jose Mario Cardona Rodriguez Pumarejo Gall"
                android:gravity="left"
                android:textSize="12sp"/>
        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="Consecutivo: "
                android:gravity="left"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/lbl_consecutivo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="123"
                android:gravity="left"
                android:textSize="14sp"/>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="20dp"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/btnVotar"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_gravity="top"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Votar por este candidato"
            android:textStyle="bold"
            android:background="@drawable/btn_yellow_internal"
            android:fontFamily="@font/roboto"/>
    </LinearLayout>

</LinearLayout>