<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <TextView
        android:id="@+id/lblNombreProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:background="@color/gris"
        android:text="Cancelar Tarjeta PRESENTE"
        android:gravity="center"
        android:textSize="17sp"
        android:fontFamily="@font/roboto_light"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:weightSum="100"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="8"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="84"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Número tarjeta"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/roboto_light"/>

                <Spinner
                    android:id="@+id/spinnerProducto"
                    android:background="@drawable/background_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="38dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Selecciona el motivo de cancelación"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto_light"
                    android:layout_marginTop="20dp"/>

                <Spinner
                    android:id="@+id/spinnerMotivoBloqueo"
                    android:background="@drawable/background_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_marginTop="10dp"/>

                <Button
                    android:id="@+id/btnBloquearTarjeta"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Enviar solicitud"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:background="@drawable/btn_yellow_internal"
                    android:fontFamily="@font/roboto_light"/>


            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="8"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>