<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff">

    <TextView
        android:id="@+id/lblHolaUsuario"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/gris"
        android:gravity="center"
        android:padding="6dp"
        android:text="Abono a tus obligaciones"
        android:textSize="16sp"
        android:fontFamily="@font/roboto_light"/>

    <LinearLayout
        android:id="@+id/layout_circular_progress_bar"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">
        <ProgressBar
            android:id="@+id/circular_progress_bar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:indeterminateTint="#707070"
            android:visibility="visible"/>
        <ImageView
            android:id="@+id/imageReferesh"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/icon_refresh"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/text_circular_progress_Bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="Intentar de nuevo"
            android:textSize="12sp"
            android:fontFamily="@font/roboto_light"
            android:visibility="visible"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/contentPagoObligaciones"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:scrollbars="none"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/lblNombreProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Producto"
                android:textStyle="bold"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_light"/>

            <Spinner
                android:id="@+id/spinnerProducto"
                android:background="@drawable/background_spinner"
                android:layout_width="match_parent"
                android:layout_height="38dp"/>

            <TextView
                android:id="@+id/lblNumeroProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:visibility="gone"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_light"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Valor a pagar"
                android:textStyle="bold"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_light"/>

            <RadioGroup
                android:id="@+id/rgValorApagar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:padding="5dp">

                    <TableRow
                        android:gravity="start"
                        android:paddingTop="2dp">

                        <RadioButton
                            android:id="@+id/rbSaldo"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Saldo"
                            android:textSize="15sp"
                            android:enabled="false"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_light"/>

                        <TextView
                            android:id="@+id/lblSaldoValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dip"
                            android:layout_marginEnd="8dip"
                            android:clickable="false"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:padding="7dp"
                            android:layout_gravity="end"
                            android:fontFamily="@font/roboto_light"/>

                    </TableRow>

                    <TableRow
                        android:gravity="start"
                        android:paddingTop="2dp"
                        android:visibility="gone">

                        <RadioButton
                            android:id="@+id/rbValCuota"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Valor cuota"
                            android:textSize="15sp"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_light"/>

                        <TextView
                            android:id="@+id/lblCuotaValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dip"
                            android:layout_marginEnd="8dip"
                            android:clickable="false"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:padding="7dp"
                            android:layout_gravity="end"
                            android:fontFamily="@font/roboto_light"/>

                    </TableRow>

                    <TableRow
                        android:gravity="start"
                        android:paddingTop="2dp">

                        <RadioButton
                            android:id="@+id/rbOtroVal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Otro valor"
                            android:textSize="15sp"
                            android:layout_weight="1"
                            android:layout_span="2"
                            android:enabled="false"
                            android:fontFamily="@font/roboto_light"/>

                    </TableRow>

                    <TableRow
                        android:gravity="start"
                        android:paddingTop="2dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Valor "
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:padding="10dp"
                            android:fontFamily="@font/roboto_light"/>

                        <EditText
                            android:id="@+id/txtValorApagar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dip"
                            android:layout_marginEnd="8dip"
                            android:clickable="false"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:padding="7dp"
                            android:inputType="number|numberDecimal"
                            android:maxLength="13"
                            android:layout_gravity="end"
                            android:enabled="false"
                            android:gravity="end"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_light"/>

                    </TableRow>

                </TableLayout>

            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Cuenta a debitar"
                android:textStyle="bold"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_light"/>

            <Spinner
                android:id="@+id/spinnerProductoDebitar"
                android:background="@drawable/background_spinner"
                android:layout_width="match_parent"
                android:layout_height="38dp"/>

            <Button
                android:id="@+id/btnAceptar"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_gravity="center"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Enviar solicitud"
                android:enabled="false"
                android:textStyle="bold"
                android:textSize="16sp"
                android:background="@drawable/btn_yellow_internal"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/roboto_light"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>