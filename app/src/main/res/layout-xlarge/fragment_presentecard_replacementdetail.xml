<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <TextView
        android:id="@+id/lblReposicion"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:background="@color/gris"
        android:text="Reposici칩n Tarjeta PRESENTE"
        android:gravity="center"
        android:textSize="17sp"
        android:fontFamily="@font/roboto_light"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:weightSum="100"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="8"/>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="84"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="Tu nueva tarjeta PRESENTE \n ser치 enviada a:"
                    android:textSize="17sp"
                    android:fontFamily="@font/roboto_light"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="C칩digo dependencia:"
                        android:gravity="center"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/roboto_light"/>

                    <EditText
                        android:id="@+id/rt_codigo_dependencia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/backgroun_border_radius_gris"
                        android:padding="10dp"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="4"
                        android:enabled="false"
                        android:fontFamily="@font/roboto_light"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nombre dependencia:"
                        android:gravity="center"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/roboto_light"/>

                    <EditText
                        android:id="@+id/rt_nombre_dependencia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:maxLength="34"
                        android:background="@drawable/backgroun_border_radius_gris"
                        android:enabled="false"
                        android:gravity="center"
                        android:inputType="text"
                        android:fontFamily="@font/roboto_light"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="@string/dependenciadiferente"
                    android:textSize="17sp"
                    android:fontFamily="@font/roboto_light"/>

                <Button
                    android:id="@+id/btnEditar"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Editar"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:background="@drawable/btn_yellow_internal"
                    android:fontFamily="@font/roboto_light"/>

                <ImageView
                    android:id="@+id/separadora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/linea_separadora"
                    android:layout_marginTop="25dp"
                    android:paddingHorizontal="35dp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="El valor de la reposici칩n de tu Tarjeta es:"
                    android:textSize="17sp"
                    android:fontFamily="@font/roboto_light"/>

                <TextView
                    android:id="@+id/valor_reposicion_tarjeta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="$0.0"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto_light"/>

                <Button
                    android:id="@+id/btnContinuar"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Continuar"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:background="@drawable/btn_yellow_internal"
                    android:fontFamily="@font/roboto_light"/>

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="8"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>