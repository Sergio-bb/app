<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="100"
        android:orientation="vertical"
        android:background="@color/white"
        android:baselineAligned="false">

        <ScrollView
            android:id="@+id/scrollview_confirmar"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="90"
            android:fillViewport="true">

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:weightSum="100"
                 android:paddingTop="5dp"
                 android:paddingLeft="12dp"
                 android:paddingRight="12dp"
                 android:orientation="vertical">

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:layout_weight="16"
                     android:layout_marginTop="20dp"
                     android:orientation="vertical"
                     android:background="@drawable/background_mi_informacion">

                     <RelativeLayout
                         android:layout_width="match_parent"
                         android:layout_height="match_parent">

                         <ImageView
                             android:layout_width="250dp"
                             android:layout_height="110dp"
                             android:src="@drawable/icon_informacion_menu"
                             android:layout_alignParentBottom="true"
                             android:layout_alignParentEnd="true"
                             android:adjustViewBounds="true"
                             android:paddingTop="20dp"
                             android:paddingStart="60dp"/>

                         <LinearLayout
                             android:layout_width="match_parent"
                             android:layout_height="match_parent"
                             android:weightSum="100"
                             android:paddingHorizontal="10dp"
                             android:orientation="vertical">

                             <TextView
                                 android:id="@+id/lblHolaUsuario"
                                 android:layout_width="match_parent"
                                 android:layout_height="match_parent"
                                 android:layout_weight="40"
                                 android:fontFamily="@font/roboto_light"
                                 android:paddingStart="10dp"
                                 android:paddingTop="8dp"
                                 android:paddingEnd="50dp"
                                 android:paddingBottom="8dp"
                                 android:text="Hola usuario, tu información personal en un solo lugar"
                                 android:textSize="16sp"
                                 android:textColor="#4A4A49"/>

                             <LinearLayout
                                 android:layout_width="match_parent"
                                 android:layout_height="match_parent"
                                 android:layout_weight="60"
                                 android:weightSum="100"
                                 android:orientation="horizontal"
                                 android:gravity="center"
                                 android:paddingBottom="8dp">

                                 <LinearLayout
                                     android:layout_width="match_parent"
                                     android:layout_height="match_parent"
                                     android:layout_weight="30"
                                     android:paddingVertical="2dp"
                                     android:gravity="center">

                                     <Button
                                         android:id="@+id/btn_mi_informacion"
                                         android:layout_width="wrap_content"
                                         android:layout_height="match_parent"
                                         android:background="@drawable/btn_yellow_internal"
                                         android:fontFamily="@font/roboto_light"
                                         android:text="Ir a mi información"
                                         android:textAllCaps="false"
                                         android:textSize="14sp" />

                                 </LinearLayout>

                                 <LinearLayout
                                     android:layout_width="match_parent"
                                     android:layout_height="match_parent"
                                     android:layout_weight="27"
                                     android:orientation="vertical"
                                     android:gravity="center_vertical"
                                     android:paddingLeft="5dp">

                                     <TextView
                                         android:text="@string/ultima_actualizacion"
                                         android:layout_width="wrap_content"
                                         android:layout_height="wrap_content"
                                         android:fontFamily="@font/roboto_light"
                                         android:textSize="12sp"
                                         android:textColor="#4A4A49"/>

                                     <TextView
                                         android:id="@+id/tv_ultimaactualizacion"
                                         android:text="29/04/2021"
                                         android:layout_width="wrap_content"
                                         android:layout_height="wrap_content"
                                         android:fontFamily="@font/roboto_light"
                                         android:textSize="10sp"
                                         android:textColor="#4A4A49"/>

                                 </LinearLayout>

                                 <View
                                     android:layout_width="match_parent"
                                     android:layout_height="match_parent"
                                     android:layout_weight="43"/>
                             </LinearLayout>
                         </LinearLayout>
                     </RelativeLayout>
                 </LinearLayout>


                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:layout_gravity="center"
                     android:layout_marginTop="10dp"
                     android:layout_marginBottom="10dp"
                     android:layout_weight="18"
                     android:gravity="center">

                     <LinearLayout
                         android:id="@+id/btn_mis_mensajes"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:background="@drawable/background_mis_mensajes"
                         android:orientation="horizontal">

                         <TextView
                             android:layout_width="match_parent"
                             android:layout_height="match_parent"
                             android:layout_weight="1"
                             android:fontFamily="@font/roboto_light"
                             android:paddingVertical="9dp"
                             android:paddingLeft="12dp"
                             android:text="Mis mensajes"
                             android:textAllCaps="false"
                             android:textColor="#4A4A49"
                             android:textSize="17sp" />

                         <ImageView
                             android:id="@+id/row_cant_messages"
                             android:layout_width="match_parent"
                             android:layout_height="match_parent"
                             android:layout_gravity="center"
                             android:layout_weight="3"
                             android:gravity="center"
                             android:padding="10dp"
                             android:scaleType="center"
                             android:src="@drawable/icon_mensajes" />
                     </LinearLayout>
                 </LinearLayout>

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:layout_weight="19"
                     android:orientation="vertical">
                     <TextView
                         android:text="@string/encuentra_servicios"
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:fontFamily="@font/roboto_light"
                         android:gravity="center"
                         android:textSize="16sp"
                         android:textColor="#4A4A49"/>
                 </LinearLayout>

                 <LinearLayout
                     android:id="@+id/ly_options"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:layout_weight="15"
                     android:weightSum="100"
                     android:orientation="horizontal">

                     <RelativeLayout
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:layout_weight="50">

                         <ImageView
                             android:layout_width="match_parent"
                             android:layout_height="match_parent"
                             android:scaleType="fitCenter"
                             android:src="@drawable/home_finanzas"/>

                         <LinearLayout
                             android:id="@+id/imgb_finanzas"
                             android:layout_width="match_parent"
                             android:layout_height="match_parent"
                             android:orientation="vertical"
                             android:weightSum="100">

                             <LinearLayout
                                 android:layout_width="match_parent"
                                 android:layout_height="match_parent"
                                 android:layout_weight="26"
                                 android:weightSum="100"
                                 android:orientation="vertical">

                                 <View
                                     android:layout_width="match_parent"
                                     android:layout_height="match_parent"
                                     android:layout_weight="32"/>

                                 <ImageView
                                     android:layout_width="match_parent"
                                     android:layout_height="match_parent"
                                     android:layout_gravity="center"
                                     android:scaleType="centerInside"
                                     android:layout_weight="18"
                                     android:src="@drawable/icon_finanzas" />

                                 <View
                                     android:layout_width="match_parent"
                                     android:layout_height="match_parent"
                                     android:layout_weight="50"/>

                             </LinearLayout>

                             <TextView
                                 android:layout_width="match_parent"
                                 android:layout_height="match_parent"
                                 android:layout_weight="43"
                                 android:fontFamily="@font/roboto_light"
                                 android:gravity="center_horizontal"
                                 android:text="@string/menu_finanzass"
                                 android:textColor="#4A4A49"
                                 android:textSize="19sp" />

                             <TextView
                                 android:layout_width="match_parent"
                                 android:layout_height="match_parent"
                                 android:layout_weight="29"
                                 android:fontFamily="@font/roboto_light"
                                 android:gravity="center_horizontal"
                                 android:text="Administra aquí tu dinero"
                                 android:textSize="10sp" />

                         </LinearLayout>
                     </RelativeLayout>

                     <RelativeLayout
                         android:id="@+id/flConvenios"
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:layout_weight="50"
                         android:visibility="gone">

                         <ImageView
                             android:layout_width="match_parent"
                             android:layout_height="match_parent"
                             android:layout_gravity="center"
                             android:scaleType="fitCenter"
                             android:src="@drawable/home_convenios"/>

                         <LinearLayout
                             android:id="@+id/imgb_alianzas"
                             android:layout_width="match_parent"
                             android:layout_height="match_parent"
                             android:orientation="vertical"
                             android:weightSum="100">

                             <LinearLayout
                                 android:layout_width="match_parent"
                                 android:layout_height="match_parent"
                                 android:layout_weight="26"
                                 android:weightSum="100"
                                 android:orientation="vertical">

                                 <View
                                     android:layout_width="match_parent"
                                     android:layout_height="match_parent"
                                     android:layout_weight="32"/>

                                 <ImageView
                                     android:layout_width="match_parent"
                                     android:layout_height="match_parent"
                                     android:layout_gravity="center"
                                     android:scaleType="centerInside"
                                     android:layout_weight="18"
                                     android:src="@drawable/icon_convenios" />

                                 <View
                                     android:layout_width="match_parent"
                                     android:layout_height="match_parent"
                                     android:layout_weight="50"/>

                             </LinearLayout>

                             <TextView
                                 android:layout_width="match_parent"
                                 android:layout_height="match_parent"
                                 android:layout_weight="43"
                                 android:fontFamily="@font/roboto_light"
                                 android:gravity="center_horizontal"
                                 android:text="@string/menu_convenios"
                                 android:textColor="#4A4A49"
                                 android:textSize="19sp" />


                             <TextView
                                 android:layout_width="match_parent"
                                 android:layout_height="match_parent"
                                 android:layout_weight="29"
                                 android:fontFamily="@font/roboto_light"
                                 android:gravity="center_horizontal"
                                 android:text="Todos los beneficios son para ti"
                                 android:textSize="10sp" />

                         </LinearLayout>
                     </RelativeLayout>

                 </LinearLayout>

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:layout_weight="18"
                     android:orientation="vertical"
                     android:layout_marginTop="10dp"
                     android:layout_centerHorizontal="true">

                     <View
                         android:layout_width="match_parent"
                         android:layout_height="2dp"
                         android:layout_marginBottom="15dp"
                         android:layout_marginHorizontal="30dp"
                         android:background="@drawable/separator_yellow"/>

                     <TextView
                         android:text="@string/te_interesa"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:gravity="center"
                         android:textSize="16sp"
                         android:fontFamily="@font/roboto_light"
                         android:textColor="#4A4A49"/>
                 </LinearLayout>

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:layout_weight="14"
                     android:layout_gravity="center"
                     android:paddingBottom="10dp"
                     android:orientation="vertical">

                     <ProgressBar
                         android:id="@+id/circular_progress_bar"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:indeterminateTint="#707070"
                         android:scaleType="centerInside"
                         android:paddingVertical="15dp"
                         android:visibility="visible"/>

                     <ImageButton
                         android:id="@+id/btnElecciones"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:adjustViewBounds="true"
                         android:layout_gravity="center"
                         android:scaleType="fitCenter"
                         android:visibility="gone"
                         />
                 </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:layout_alignParentBottom="true"
            android:background="@color/yellow"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:weightSum="100"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="24"
                    android:weightSum="100"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/btnPortafolio"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="70"
                        android:gravity="top|center|center_horizontal"
                        android:background="@android:color/transparent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_portafolio" />

                    <TextView
                        android:id="@+id/tv_productos"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="30"
                        android:gravity="top|center|center_horizontal"
                        android:layout_below="@+id/btnPortafolio"
                        android:background="@android:color/transparent"
                        android:text="Productos"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="24"
                    android:weightSum="100"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/btnDirectorio"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="70"
                        android:layout_toRightOf="@+id/btnPreguntasFrecuentes"
                        android:background="@android:color/transparent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_directorio"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tv_directorio"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="30"
                        android:gravity="top|center|center_horizontal"
                        android:layout_below="@+id/btnDirectorio"
                        android:layout_toRightOf="@+id/tv_ayuda"
                        android:background="@android:color/transparent"
                        android:text="Directorio"
                        android:textSize="12sp"
                        android:visibility="visible" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="24"
                    android:weightSum="100"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/btnEncuentranos"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="70"
                        android:layout_toRightOf="@+id/btnDirectorio"
                        android:background="@android:color/transparent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_encuentranos"
                        android:visibility="visible" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="30"
                        android:gravity="top|center|center_horizontal"
                        android:layout_below="@+id/btnEncuentranos"
                        android:layout_toRightOf="@+id/tv_directorio"
                        android:background="@android:color/transparent"
                        android:text="Encuéntranos"
                        android:textSize="12sp"
                        android:visibility="visible" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="24"
                    android:weightSum="100"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/btnPreguntasFrecuentes"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="70"
                        android:layout_toRightOf="@+id/btnPortafolio"
                        android:background="@android:color/transparent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_mas"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tv_ayuda"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="30"
                        android:gravity="top|center|center_horizontal"
                        android:layout_below="@+id/btnPreguntasFrecuentes"
                        android:layout_toRightOf="@+id/tv_productos"
                        android:background="@android:color/transparent"
                        android:text="Más"
                        android:textSize="12sp"
                        android:visibility="visible" />

                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>