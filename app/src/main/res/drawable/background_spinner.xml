<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item><layer-list>
        <item>
            <shape>
                <solid
                    android:color="@android:color/white">
                </solid>

                <corners android:radius="10dp" />

                <padding
                    android:bottom="2dp"
                    android:left="2dp"
                    android:right="10dp"
                    android:top="2dp" />
                <stroke
                    android:width="1dip"
                    android:color="#ccc"/>
            </shape>
        </item>
        <item >
            <bitmap android:gravity="center|right"
                android:src="@drawable/icon_dropdown" />
        </item>
    </layer-list></item>
</selector>
